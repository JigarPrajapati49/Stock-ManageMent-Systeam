<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp"
        android:layout_margin="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_8sdp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:weightSum="6">


                <TextView
                    android:id="@+id/popname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/Blue"
                    android:drawableLeft="@drawable/ic_baseline_person_add_24"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="ProductName"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/povname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/Yellow"
                    android:drawableLeft="@drawable/ic_baseline_apartment_24"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="VendorName"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/popquantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/teal_700"
                    android:drawableLeft="@drawable/ic_baseline_near_me_24"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="PurchaseQuantity"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/popdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#F57F17"
                    android:drawableLeft="@drawable/ic_baseline_phone_24"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="PurchaseDate"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/poprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/Red"
                    android:drawableLeft="@drawable/ic_baseline_email_24"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="PurchasePrice"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/poptype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/purple_200"
                    android:drawableLeft="@drawable/ic_baseline_email_24"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="PurchaseType"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
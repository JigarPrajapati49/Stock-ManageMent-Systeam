<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PurchaseEntry">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_add_tennis"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1877F2">

        <TextView
            android:id="@+id/PurchaseEntryBackArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_arrow_back_24" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/_40sdp"
            android:text="Purchase Entry"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp" />


    </com.google.android.material.appbar.MaterialToolbar>


    <TextView
        android:id="@+id/TVprocutname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="@dimen/_40sdp"
        android:text="Product Name"
        android:textColor="#1877F2" />

    <EditText
        android:id="@+id/ETproductname"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVprocutname"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:drawableLeft="@drawable/ic_baseline_local_offer_24"
        android:drawablePadding="10dp"
        android:hint="Product Name" />

    <TextView
        android:id="@+id/TVvendornameinpurchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ETproductname"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Vendor Name"
        android:textColor="#1877F2" />

    <EditText
        android:id="@+id/ETvendornameinpurchase"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVvendornameinpurchase"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="10dp"
        android:hint="Vendor Name" />

    <ImageButton
        android:id="@+id/IBplusicon1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/ETvendornameinpurchase"
        android:layout_marginLeft="@dimen/_255sdp"
        android:layout_marginTop="@dimen/_63sdp"
        android:background="@drawable/roundshape"
        android:foregroundGravity="center"
        android:src="@drawable/ic_baseline_add_24" />

    <ImageButton
        android:id="@+id/IBplusicon2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/ETpurchasequantity"
        android:layout_marginLeft="@dimen/_255sdp"
        android:layout_marginTop="@dimen/_119sdp"
        android:background="@drawable/roundshape"
        android:src="@drawable/ic_baseline_add_24" />


    <TextView
        android:id="@+id/TVpurchaseQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ETvendornameinpurchase"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:drawablePadding="10dp"
        android:text="Purchase Quantity"
        android:textColor="#1877F2" />


    <EditText
        android:id="@+id/ETpurchasequantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVpurchaseQuantity"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:drawableLeft="@drawable/ic_baseline_rss_feed_24"
        android:drawablePadding="10dp"
        android:hint="Purchase Quantity"
        android:inputType="phone" />

    <TextView
        android:id="@+id/TVpurchasedate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ETpurchasequantity"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Purchase Date"
        android:textColor="#1877F2" />

    <EditText
        android:id="@+id/ETpurchasedate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVpurchasedate"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:drawableLeft="@drawable/ic_baseline_edit_calendar_24"
        android:drawablePadding="10dp"
        android:focusable="false"
        android:hint="Purchase Date" />

    <TextView
        android:id="@+id/TVpurchaseprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ETpurchasedate"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Purchase Price"
        android:textColor="#1877F2" />

    <EditText
        android:id="@+id/ETpurchaseprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVpurchaseprice"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:drawableLeft="@drawable/ic_baseline_style_24"
        android:drawablePadding="10dp"
        android:hint="Purchase Price"
        android:inputType="number" />

    <TextView
        android:id="@+id/TVpurchasetype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ETpurchaseprice"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Purchase Type"
        android:textColor="#1877F2" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVpurchasetype"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@color/white" />


    <ImageButton
        android:id="@+id/IBpurchaseentry"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/spinner"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/purchaseentryroundshape"
        android:src="@drawable/ic_baseline_check_24" />


</RelativeLayout>